{
	"name": "tree-sitter-flamingo",
	"version": "1.0.0",
	"description": "Flamingo Tree-sitter",
	"main": "bindings/node",
	"types": "bindings/node",
	"scripts": {
		"install": "node-gyp-build",
		"prestart": "tree-sitter build --wasm",
		"start": "tree-sitter playground",
		"test": "node --test bindings/node/*_test.js"
	},
	"author": "Aymeric Wibo",
	"license": "ASL",
	"devDependencies": {
		"prettier": "^3.2.5",
		"prebuildify": "^6.0.1"
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"semi": false,
		"singleQuote": false,
		"quoteProps": "as-needed",
		"jsxSingleQuote": false,
		"trailingComma": "all",
		"bracketSpacing": false,
		"bracketSameLine": false,
		"arrowParens": "avoid",
		"proseWrap": "never",
		"endOfLine": "lf"
	},
	"files": [
		"grammar.js",
		"binding.gyp",
		"prebuilds/**",
		"bindings/node/*",
		"queries/*",
		"src/**",
		"*.wasm"
	],
	"dependencies": {
		"node-gyp-build": "^4.8.1"
	},
	"peerDependencies": {
		"tree-sitter": "^0.21.1"
	},
	"peerDependenciesMeta": {
		"tree_sitter": {
			"optional": true
		}
	}
}
